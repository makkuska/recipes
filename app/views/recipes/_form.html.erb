<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :procedure %><br>
    <%= f.text_area :procedure %>
  </div>
  <div class="field">
    <%= f.label :author %><br>
    <%= f.select :author, Person.all_names %>
  </div>
  <div class="field">
    <%= f.label :portion_count %><br>
    <%= f.number_field :portion_count %>
  </div>
  <div class="field">
    <%= f.label :category %><br>
    <%= f.select :category, RecipeCategory.all_names %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
